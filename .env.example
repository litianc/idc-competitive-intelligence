# LLM API Configuration
# Choose one of the following LLM providers

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Custom LLM Provider (e.g., GLM-4.5-Air)
LLM_API_KEY=your_api_key_here
LLM_API_BASE=http://your-api-endpoint
LLM_MODEL=your-model-name
LLM_PROVIDER=custom

# Database Configuration
DATABASE_PATH=data/intelligence.db

# Scraper Configuration
USER_AGENT_ROTATION=true
REQUEST_DELAY_MIN=2
REQUEST_DELAY_MAX=5

# Selenium Configuration (for enhanced scraper)
HEADLESS_MODE=true
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver

# Report Configuration
REPORT_OUTPUT_DIR=reports
WEEKLY_REPORT_DAY=friday
WEEKLY_REPORT_TIME=17:00

# Weekly Report LLM Summary
WEEKLY_SUMMARY_ENABLED=true
WEEKLY_INSIGHT_LABEL_RANDOM=true

# PDF Generation
PDF_ENABLED=true
PDF_OUTPUT_DIR=reports
PDF_PAGE_SIZE=A4
PDF_MARGIN=20mm
PDF_PRINT_BACKGROUND=true
PDF_DISPLAY_HEADER_FOOTER=true

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password_or_auth_code
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
EMAIL_ENABLED=true
